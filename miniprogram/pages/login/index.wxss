/* pages/login/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.nickname {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.login-status {
  font-size: 28rpx;
  color: #07c160;
}

.login-btn-wrap {
  width: 100%;
  padding: 0 40rpx;
  margin-top: 40rpx;
}

.login-btn {
  background-color: #07c160;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
  padding: 0 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 90rpx;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.login-btn::after {
  border: none;
}

.tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
} 