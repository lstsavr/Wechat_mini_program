.container {
  padding: 0 0 40rpx 0;
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

/* 页面标题 */
.header {
  padding: 40rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
}

/* 加载状态 */
.loading-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

/* 错误状态 */
.error-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}

.error-tip {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 30rpx;
}

.retry-button {
  padding: 16rpx 40rpx;
  background-color: #07c160;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 0 30rpx;
}

.info-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.shop-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label {
  font-size: 28rpx;
  color: #666666;
  min-width: 140rpx;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.action-btn {
  padding: 8rpx 24rpx;
  background-color: #07c160;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.divider {
  height: 1rpx;
  background-color: #eeeeee;
  margin: 30rpx 0;
}

.description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 联系我们 */
.contact-section {
  width: 100%;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.text {
  font-size: 28rpx;
  color: #333333;
}

/* 空状态 */
.empty-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 30rpx 0 0;
}

.copyright {
  font-size: 24rpx;
  color: #999999;
} 