/* 我的订单页面样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #FAFAFA;
  padding-bottom: 20px;
}

/* 页面标题样式 */
.page-header {
  padding: 15px;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 48px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.02);
}

.page-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
  text-align: center;
  flex: 1;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
  margin-top: 100px;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f0f0f0;
  border-top: 4px solid #F1B7C6; /* 淡粉色 */
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 14px;
  color: #999;
}

/* 错误提示样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
  margin-top: 100px;
  padding: 0 30px;
}

.error-text {
  margin-top: 15px;
  font-size: 14px;
  color: #666;
  text-align: center;
}

.retry-btn {
  margin-top: 20px;
  background-color: #F1B7C6; /* 淡粉色 */
  color: white;
  font-size: 14px;
  height: 36px;
  line-height: 36px;
  border-radius: 18px;
  padding: 0 20px;
  transition: all 0.2s ease;
}

.retry-btn:active {
  transform: scale(0.96);
}

/* 空订单提示样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300px;
  margin-top: 80px;
}

.empty-image {
  width: 120px;
  height: 120px;
  margin-bottom: 15px;
  opacity: 0.8;
}

.empty-text {
  font-size: 14px;
  color: #999;
  margin-bottom: 20px;
}

.go-home-btn {
  background-color: #F1B7C6; /* 淡粉色 */
  color: white;
  font-size: 14px;
  padding: 8px 20px;
  border-radius: 20px;
  transition: all 0.2s ease;
}

.go-home-btn:active {
  transform: scale(0.96);
}

/* 订单列表样式 */
.orders-list {
  padding: 15px;
}

.order-card {
  background-color: #fff;
  border-radius: 16px;
  padding: 18px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.order-card:active {
  transform: scale(0.98);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 12px;
  border-bottom: 1px solid #f5f5f5;
  margin-bottom: 15px;
}

.order-id {
  font-size: 12px;
  color: #999;
}

.order-status {
  font-size: 14px;
  padding: 3px 10px;
  border-radius: 12px;
}

.pending {
  color: #fff;
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.reserved {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.pending_payment {
  background-color: rgba(250, 173, 20, 0.1);
  color: #faad14;
}

.paid {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52c41a;
}

.completed {
  background-color: rgba(24, 144, 255, 0.1);
  color: #1890ff;
}

.cancelled {
  background-color: rgba(153, 153, 153, 0.1);
  color: #999;
}

/* 相机信息 */
.camera-info {
  display: flex;
  margin-bottom: 15px;
}

.camera-image {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  background-color: #f9f9f9;
  object-fit: cover;
}

.camera-details {
  flex: 1;
  margin-left: 15px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.camera-name {
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
  font-weight: 500;
}

.rental-date {
  font-size: 13px;
  color: #666;
  background-color: rgba(241, 183, 198, 0.05);
  padding: 4px 8px;
  border-radius: 4px;
  display: inline-block;
}

/* 订单信息 */
.order-info {
  background-color: #f9f9f9;
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 15px;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  font-size: 13px;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
}

.info-value {
  color: #333;
  font-weight: 500;
}

.price {
  color: #F1B7C6; /* 淡粉色 */
  font-weight: 500;
}

/* 订单底部 */
.order-footer {
  border-top: 1px dashed #f0f0f0;
  padding-top: 15px;
  display: flex;
  flex-direction: column;
}

.order-tips {
  font-size: 12px;
  color: #F1B7C6; /* 淡粉色 */
  margin-bottom: 12px;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin-left: 10px;
  background-color: #fff;
  color: #F1B7C6; /* 淡粉色 */
  border: 1px solid #F1B7C6;
  font-size: 13px;
  height: 32px;
  line-height: 32px;
  border-radius: 16px;
  padding: 0 15px;
  min-width: 70px;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.96);
  background-color: rgba(241, 183, 198, 0.05);
}

.action-btn.primary {
  background-color: #F1B7C6; /* 淡粉色 */
  color: white;
  border: none;
}

/* 返回按钮 */
.back-btn {
  position: absolute;
  left: 15px;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 101;
}

.back-arrow {
  width: 10px;
  height: 10px;
  border-left: 2px solid #666;
  border-bottom: 2px solid #666;
  transform: rotate(45deg);
} 